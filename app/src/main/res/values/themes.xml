<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.DoThings" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/SurfaceGray</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">2000</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @mipmap/light_launcher_icon
        </item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/SurfaceGray
        </item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/SurfaceGray</item>

    </style>

    <style name="DialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:statusBarColor">@color/SurfaceGray</item>
        <item name="android:navigationBarColor">@color/SurfaceGray</item>
    </style>

</resources>